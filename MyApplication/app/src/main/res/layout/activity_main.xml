<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/periwinkle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textview_network"
        android:text="@string/your_network"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_alignParentStart="true"
        android:layout_marginVertical="62dp"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="17dp"
        android:layout_height="wrap_content">

    </TextView>
    
    <androidx.appcompat.widget.SearchView
        app:queryHint="Search Notes..."
        app:iconifiedByDefault="false"
        android:id="@+id/searchHome"
        android:layout_marginVertical ="120dp"
        app:animateMenuItems="true"
        android:layout_marginHorizontal="22dp"
        android:layout_width="match_parent"
        android:background="@color/lilac"
        android:layout_height="?attr/actionBarSize">
    </androidx.appcompat.widget.SearchView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_container"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="220dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </androidx.recyclerview.widget.RecyclerView>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_contact"
        android:layout_alignParentBottom="true"
        android:layout_margin="24dp"
        android:foreground="@drawable/baseline_add_24"
        app:backgroundTint="@color/darkPurple"
        android:contentDescription="@string/app_name"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </com.google.android.material.floatingactionbutton.FloatingActionButton>

</RelativeLayout>